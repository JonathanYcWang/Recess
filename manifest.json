{
  "manifest_version": 3,
  "name": "Recess",
  "version": "1.0.0",
  "description": "A focus session manager with breaks and site blocking",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "declarativeNetRequest",
    "alarms",
    "activeTab",
    "notifications"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Recess"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  }
}
